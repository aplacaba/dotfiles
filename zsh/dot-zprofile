# tmux
alias t='tmux new-session -s'
alias ta='tmux attach-session -t'
alias tl='tmux list-sessions'
alias tx='tmux kill-session -t'
alias lft1='ssh lft@10.20.25.129'
alias lft2='ssh lft@192.168.1.107'

# ruby
alias be='bundle exec'

# bash
alias xcopy='xclip -sel clip'
alias tcopy='tmux show-buffer | xcopy'

typeset -U path

path=(${HOME}/.cargo/bin
      ${HOME}/.local/bin
      $path)

export PATH

stty -ixon

vterm_printf(){
    if [ -n "$TMUX" ]; then
        # Tell tmux to pass the escape sequences through
        # (Source: http://permalink.gmane.org/gmane.comp.terminal-emulators.tmux.user/1324)
        printf "\ePtmux;\e\e]%s\007\e\\" "$1"
    elif [ "${TERM%%-*}" = "screen" ]; then
        # GNU screen (screen, screen-256color, screen-256color-bce)
        printf "\eP\e]%s\007\e\\" "$1"
    else
        printf "\e]%s\e\\" "$1"
    fi
}

# update kernel cmdline parameters every kernel update
kernel_yolo() {
    sudo grubby --args="ro quiet splash mitigations=off usbcore.usbfs_memory_mb=1000" --update-kernel /boot/vmlinuz-`uname -r`
}

ctrl-center-fix () {
    gsettings set org.gnome.ControlCenter last-panel ''
}

autoload -Uz compinit && compinit
. ${HOME}/.asdf/asdf.sh
if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then exec startx; fi
